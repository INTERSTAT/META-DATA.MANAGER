  </appender>-->

  <logger name="BaseServicesLogger">
    <!-- 
    Livello minimo da loggare. Valori possibili: 
      ALL
      DEBUG
      INFO
      WARN
      ERROR
      FATAL
      OFF 
    -->
    <level value="DEBUG" />
    <!--<appender-ref ref="db" />-->
    <appender-ref ref="DailyFile" />
  </logger>
  <root>
    <level value="DEBUG" />
  </root>

</log4net>
